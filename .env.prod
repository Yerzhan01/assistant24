# Production Settings

# Database (must match docker-compose.prod.yml)
POSTGRES_USER=digital_secretary_prod_user
POSTGRES_PASSWORD=replace_this_with_strong_password
POSTGRES_DB=digital_secretary_prod

# Security
SECRET_KEY=replace_this_with_really_long_random_string
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days
ALGORITHM=HS256

# AI (Use existing keys or new production keys)
# GEMINI_API_KEY is inherited from .env if not set here

# Domain
DOMAIN=example.com
BACKEND_CORS_ORIGINS=["http://example.com","https://example.com"]

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
